" vim: ft=vimperator

set complete=l
set followhints=1
set newtab=all
set! browser.startup.page=1
set defsearch='g'

nnoremap <C-1> :tabfirst<cr>
nnoremap <C-9> :tablast<cr>

" faster scrolling:
nnoremap j 5j
nnoremap k 5k
nnoremap h 5h
nnoremap l 5l

nnoremap J 10j
nnoremap K 10k

" faster quit
nnoremap QQ :quit<cr>

" move through tabs:
nnoremap <C-Left> gT
nnoremap <C-Right> gt
nnoremap <C-h> gT
nnoremap <C-l> gt

" shift toolbar up and down:
nnoremap <C-j> :set guioptions+=BmT<cr>
nnoremap <C-k> :set guioptions-=BmT<cr>

" easier pasting
cnoremap <c-p> <c-v><c-v>
inoremap <c-p> <c-v><c-v>

" firebug:
nnoremap gn <F12>

" faster gmail
nnoremap gm t http://gmail.com<cr>

nnoremap e :emenu<space>

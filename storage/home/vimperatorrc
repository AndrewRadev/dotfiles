set complete=l
set followhints=1
set newtab=all
set! browser.startup.page=1
set defsearch='g'
set focuscontent
set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs

highlight CmdLine    color: white; background: black; -moz-transition: all 0.25s; font-size: 16px;
highlight StatusLine color: black; background: transparent; font-weight: normal; font-size: 16px;

highlight CompItem -append font-size: 16px;

nmap <C-1> :tabfirst<cr>
nmap <C-9> :tablast<cr>

" faster scrolling:
noremap j 5j
noremap k 5k
noremap h 5h
noremap l 5l

noremap J 10j
noremap K 10k

" faster quit
noremap QQ :quit<cr>

" move through tabs:
noremap <C-Left> gT
noremap <C-Right> gt
noremap <C-h> gT
noremap <C-l> gt

" shift toolbar up and down:
noremap <C-j> :set gui=noaddons,bookmarks,menu,navigation,tabs<cr>
noremap <C-k> :set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs<cr>

" easier pasting
cnoremap <c-p> <c-v>
inoremap <c-p> <c-v>

" inspector:
noremap go <C-S-i>

" faster gmail
noremap gm t http://gmail.com<cr>

noremap e :emenu<space>
